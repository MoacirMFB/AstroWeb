	}));

const splitPublicationCitation = (citation: string) => {
	const match = citation.match(/^(.*?\b\d{4}\.\s*)(.+)$/);
	if (!match) {
		return { authors: citation, title: '' };
	}

	return {
		authors: match[1],
		title: match[2],
	};
};

