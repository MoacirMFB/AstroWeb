const RECENT_PROJECT_START_YEAR = 2023;

const getProjectStartYear = (year: string): number | null => {
	const match = year.match(/\d{4}/);
	if (!match) {
		return null;
	}
	const parsed = Number(match[0]);
	return Number.isFinite(parsed) ? parsed : null;
};

const getProjectEra = (year: string): 'recent' | 'legacy' => {
	const startYear = getProjectStartYear(year);
	return startYear !== null && startYear >= RECENT_PROJECT_START_YEAR ? 'recent' : 'legacy';
};

