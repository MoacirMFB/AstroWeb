	<script is:inline>
		(() => {
			const themeStorageKey = 'site-theme';
			const root = document.documentElement;
			const themeToggle = document.querySelector('[data-theme-toggle]');
			const darkSchemeMedia =
				window.matchMedia && typeof window.matchMedia === 'function'
					? window.matchMedia('(prefers-color-scheme: dark)')
					: null;

			const getThemeFromStorage = () => {
				try {
					const storedTheme = localStorage.getItem(themeStorageKey);
					return storedTheme === 'light' || storedTheme === 'dark' ? storedTheme : null;
				} catch {
					return null;
				}
			};

			const resolveTheme = () => {
				const storedTheme = getThemeFromStorage();
				if (storedTheme) {
					return storedTheme;
				}
				if (darkSchemeMedia) {
					return darkSchemeMedia.matches ? 'dark' : 'light';
				}
				return root.dataset.theme === 'light' ? 'light' : 'dark';
			};

			const updateThemeToggleLabel = (theme) => {
				if (!(themeToggle instanceof HTMLButtonElement)) {
					return;
				}
				const nextTheme = theme === 'light' ? 'dark' : 'light';
				const nextThemeLabel = nextTheme === 'light' ? 'claro' : 'oscuro';
				const label = `Cambiar a modo ${nextThemeLabel}`;
				themeToggle.setAttribute('aria-label', label);
				themeToggle.setAttribute('aria-pressed', theme === 'dark' ? 'true' : 'false');
				themeToggle.setAttribute('title', label);
			};

			const applyTheme = (theme, persist = false) => {
				const normalizedTheme = theme === 'light' ? 'light' : 'dark';
				root.dataset.theme = normalizedTheme;
				updateThemeToggleLabel(normalizedTheme);

				if (!persist) {
					return;
				}

				try {
					localStorage.setItem(themeStorageKey, normalizedTheme);
				} catch {
					// localStorage may be unavailable in private or restricted contexts.
				}
			};

			applyTheme(resolveTheme());

			if (themeToggle instanceof HTMLButtonElement) {
				themeToggle.addEventListener('click', () => {
					const currentTheme = root.dataset.theme === 'light' ? 'light' : 'dark';
					const nextTheme = currentTheme === 'light' ? 'dark' : 'light';
					applyTheme(nextTheme, true);
				});
			}

			const syncWithSystemTheme = (event) => {
				if (getThemeFromStorage()) {
					return;
				}
				applyTheme(event.matches ? 'dark' : 'light');
			};

			if (darkSchemeMedia) {
				if (typeof darkSchemeMedia.addEventListener === 'function') {
					darkSchemeMedia.addEventListener('change', syncWithSystemTheme);
				} else if (typeof darkSchemeMedia.addListener === 'function') {
					darkSchemeMedia.addListener(syncWithSystemTheme);
				}
			}

			const buttons = Array.from(document.querySelectorAll('.filter-button'));
			const cards = Array.from(document.querySelectorAll('.project-card'));
			const countTarget = document.querySelector('[data-project-count]');
			const hasProjectFilters = buttons.length > 0 && cards.length > 0 && Boolean(countTarget);

			const applyFilter = (filter) => {
				if (!hasProjectFilters || !countTarget) {
					return;
				}

				let visibleCount = 0;
				cards.forEach((card) => {
					const era = card.getAttribute('data-era');
					const hasVideo = card.getAttribute('data-has-video');
					let visible = true;
					if (filter === 'recent') {
						visible = era === 'recent';
					} else if (filter === 'legacy') {
						visible = era === 'legacy';
					} else if (filter === 'video') {
						visible = hasVideo === 'true';
					}

					card.hidden = !visible;
					card.classList.toggle('is-hidden', !visible);
					if (visible) {
						visibleCount += 1;
					}
				});

				const label = visibleCount === 1 ? 'proyecto' : 'proyectos';
				countTarget.textContent = `Mostrando ${visibleCount} ${label}`;
			};

			if (hasProjectFilters) {
				buttons.forEach((button) => {
					button.addEventListener('click', () => {
						const filter = button.getAttribute('data-filter') || 'all';
						buttons.forEach((other) => other.classList.remove('is-active'));
						button.classList.add('is-active');
						applyFilter(filter);
					});
				});
			}

				const carousels = Array.from(document.querySelectorAll('[data-carousel]'));
				carousels.forEach((carousel) => {
					const slides = Array.from(carousel.querySelectorAll('[data-carousel-slide]'));
					const dots = Array.from(carousel.querySelectorAll('[data-carousel-dot]'));
					const prev = carousel.querySelector('[data-carousel-prev]');
				const next = carousel.querySelector('[data-carousel-next]');

				if (slides.length <= 1) {
					carousel.classList.add('is-single');
					return;
				}

				let currentIndex = 0;
				const render = () => {
					slides.forEach((slide, index) => {
						const isActive = index === currentIndex;
						slide.classList.toggle('is-active', isActive);
						slide.setAttribute('aria-hidden', isActive ? 'false' : 'true');
					});
					dots.forEach((dot, index) => {
						const isActive = index === currentIndex;
						dot.classList.toggle('is-active', isActive);
						dot.setAttribute('aria-selected', isActive ? 'true' : 'false');
					});
				};

				prev?.addEventListener('click', () => {
					currentIndex = (currentIndex - 1 + slides.length) % slides.length;
					render();
				});

				next?.addEventListener('click', () => {
					currentIndex = (currentIndex + 1) % slides.length;
					render();
				});

				dots.forEach((dot, index) => {
					dot.addEventListener('click', () => {
						currentIndex = index;
						render();
					});
				});

					render();
				});

				const lightbox = document.querySelector('[data-image-lightbox]');
				const lightboxImage = document.querySelector('[data-lightbox-image]');
				const lightboxVideoWrap = document.querySelector('[data-lightbox-video-wrap]');
				const lightboxVideo = document.querySelector('[data-lightbox-video]');
				const lightboxCaption = document.querySelector('[data-lightbox-caption]');
				const lightboxClose = document.querySelector('[data-lightbox-close]');
				const lightboxPrev = document.querySelector('[data-lightbox-prev]');
				const lightboxNext = document.querySelector('[data-lightbox-next]');
				const galleryImages = Array.from(document.querySelectorAll('.gallery-image'));
				const galleryVideoTriggers = Array.from(document.querySelectorAll('[data-gallery-video-open]'));
				let lightboxSlides = [];
				let lightboxIndex = 0;

				const getCarouselSlides = (carousel) => {
					if (!carousel) {
						return [];
					}
					return Array.from(carousel.querySelectorAll('[data-carousel-slide]'))
						.map((slide) => ({
							node: slide,
							kind: slide.getAttribute('data-lightbox-kind') === 'video' ? 'video' : 'image',
							src: slide.getAttribute('data-lightbox-src') || '',
							alt: slide.getAttribute('data-lightbox-alt') || '',
						}))
						.filter((entry) => entry.src.length > 0);
				};

				const renderLightbox = () => {
					if (!lightbox || !lightboxImage || !lightboxCaption) {
						return;
					}
					const currentSlide = lightboxSlides[lightboxIndex];
					if (!currentSlide) {
						return;
					}

					const isVideo = currentSlide.kind === 'video';
					if (isVideo) {
						if (!lightboxVideoWrap || !lightboxVideo) {
							return;
						}
						lightboxImage.setAttribute('hidden', '');
						lightboxImage.setAttribute('src', '');
						lightboxImage.setAttribute('alt', '');
						lightboxVideoWrap.removeAttribute('hidden');
						lightboxVideo.setAttribute('src', currentSlide.src);
						lightboxVideo.setAttribute('title', currentSlide.alt || 'Video del proyecto ampliado');
					} else {
						lightboxVideo?.setAttribute('src', '');
						lightboxVideoWrap?.setAttribute('hidden', '');
						lightboxImage.removeAttribute('hidden');
						lightboxImage.setAttribute('src', currentSlide.src);
						lightboxImage.setAttribute('alt', currentSlide.alt || 'Expanded project image');
					}

					lightboxCaption.textContent = currentSlide.alt || '';
					const hasMultiple = lightboxSlides.length > 1;
					lightboxPrev?.toggleAttribute('hidden', !hasMultiple);
					lightboxNext?.toggleAttribute('hidden', !hasMultiple);
				};

				const openLightbox = (slides, startIndex) => {
					if (!lightbox || !lightboxImage || !lightboxCaption || !Array.isArray(slides) || slides.length === 0) {
						return;
					}
					lightboxSlides = slides
						.map((slide) => ({
							kind: slide.kind === 'video' ? 'video' : 'image',
							src: slide.src || '',
							alt: slide.alt || '',
						}))
						.filter((slide) => slide.src.length > 0);
					if (lightboxSlides.length === 0) {
						return;
					}

					const normalizedStart = Number.isFinite(startIndex) ? startIndex : 0;
					lightboxIndex = ((normalizedStart % lightboxSlides.length) + lightboxSlides.length) % lightboxSlides.length;
					renderLightbox();
					lightbox.classList.add('is-open');
					lightbox.setAttribute('aria-hidden', 'false');
					document.body.classList.add('lightbox-open');
				};

				const stepLightbox = (delta) => {
					if (lightboxSlides.length <= 1) {
						return;
					}
					lightboxIndex = (lightboxIndex + delta + lightboxSlides.length) % lightboxSlides.length;
					renderLightbox();
				};

				const closeLightbox = () => {
					if (!lightbox || !lightboxImage || !lightboxCaption) {
						return;
					}
					lightbox.classList.remove('is-open');
					lightbox.setAttribute('aria-hidden', 'true');
					lightboxImage.removeAttribute('hidden');
					lightboxImage.setAttribute('src', '');
					lightboxImage.setAttribute('alt', '');
					lightboxVideo?.setAttribute('src', '');
