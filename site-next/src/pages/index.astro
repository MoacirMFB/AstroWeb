<script is:inline>
	(() => {
		const buttons = Array.from(document.querySelectorAll('.filter-button'));
		const cards = Array.from(document.querySelectorAll('.project-card'));
		const countTarget = document.querySelector('[data-project-count]');
		if (!buttons.length || !cards.length || !countTarget) {
			return;
		}

		const applyFilter = (filter) => {
			let visibleCount = 0;
			cards.forEach((card) => {
				const era = card.getAttribute('data-era');
				const hasVideo = card.getAttribute('data-has-video');
				let visible = true;
				if (filter === 'recent') {
					visible = era === 'recent';
				} else if (filter === 'legacy') {
					visible = era === 'legacy';
				} else if (filter === 'video') {
					visible = hasVideo === 'true';
				}

				card.hidden = !visible;
				card.classList.toggle('is-hidden', !visible);
				if (visible) {
					visibleCount += 1;
				}
			});

			const label = visibleCount === 1 ? 'project' : 'projects';
			countTarget.textContent = `Showing ${visibleCount} ${label}`;
		};

		buttons.forEach((button) => {
			button.addEventListener('click', () => {
				const filter = button.getAttribute('data-filter') || 'all';
				buttons.forEach((other) => other.classList.remove('is-active'));
				button.classList.add('is-active');
				applyFilter(filter);
			});
		});

		applyFilter('all');
	})();
</script>

