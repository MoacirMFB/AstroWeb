const getYouTubeId = (url: string): string | null => {
	try {
		const parsed = new URL(url);
		if (parsed.hostname.includes('youtu.be')) {
			return parsed.pathname.replace('/', '') || null;
		}
		if (parsed.hostname.includes('youtube.com')) {
			const video = parsed.searchParams.get('v');
			if (video) {
				return video;
			}
			const parts = parsed.pathname.split('/').filter(Boolean);
			if (parts[0] === 'embed' && parts[1]) {
				return parts[1];
			}
		}
	} catch {
		return null;
	}
	return null;
};

const getGoogleDriveFileId = (url: string): string | null => {
	try {
		const parsed = new URL(url);
		if (!parsed.hostname.includes('drive.google.com')) {
			return null;
		}

		const pathParts = parsed.pathname.split('/').filter(Boolean);
		if (pathParts[0] === 'file' && pathParts[1] === 'd' && pathParts[2]) {
			return pathParts[2];
		}

		const id = parsed.searchParams.get('id');
		return id || null;
	} catch {
		return null;
	}
};

const getEmbedUrl = (video: ProjectVideo): string => {
	const id = getYouTubeId(video.url);
	if (id) {
		const params = new URLSearchParams();
		params.set('rel', '0');
		params.set('modestbranding', '1');
		if (video.start) {
			params.set('start', String(video.start));
		}
		return `https://www.youtube-nocookie.com/embed/${id}?${params.toString()}`;
	}

	const driveId = getGoogleDriveFileId(video.url);
	if (driveId) {
		return `https://drive.google.com/file/d/${driveId}/preview`;
	}

	return video.url;
};

