	<script is:inline>
		(() => {
			const buttons = Array.from(document.querySelectorAll('.filter-button'));
			const cards = Array.from(document.querySelectorAll('.project-card'));
			const countTarget = document.querySelector('[data-project-count]');
			const hasProjectFilters = buttons.length > 0 && cards.length > 0 && Boolean(countTarget);

			const applyFilter = (filter) => {
				if (!hasProjectFilters || !countTarget) {
					return;
				}

				let visibleCount = 0;
				cards.forEach((card) => {
					const era = card.getAttribute('data-era');
					const hasVideo = card.getAttribute('data-has-video');
					let visible = true;
					if (filter === 'recent') {
						visible = era === 'recent';
					} else if (filter === 'legacy') {
						visible = era === 'legacy';
					} else if (filter === 'video') {
						visible = hasVideo === 'true';
					}

					card.hidden = !visible;
					card.classList.toggle('is-hidden', !visible);
					if (visible) {
						visibleCount += 1;
					}
				});

				const label = visibleCount === 1 ? 'project' : 'projects';
				countTarget.textContent = `Showing ${visibleCount} ${label}`;
			};

			if (hasProjectFilters) {
				buttons.forEach((button) => {
					button.addEventListener('click', () => {
						const filter = button.getAttribute('data-filter') || 'all';
						buttons.forEach((other) => other.classList.remove('is-active'));
						button.classList.add('is-active');
						applyFilter(filter);
					});
				});
			}

				const carousels = Array.from(document.querySelectorAll('[data-carousel]'));
				carousels.forEach((carousel) => {
					const slides = Array.from(carousel.querySelectorAll('[data-carousel-slide]'));
					const dots = Array.from(carousel.querySelectorAll('[data-carousel-dot]'));
					const prev = carousel.querySelector('[data-carousel-prev]');
				const next = carousel.querySelector('[data-carousel-next]');

				if (slides.length <= 1) {
					carousel.classList.add('is-single');
					return;
				}

				let currentIndex = 0;
				const render = () => {
					slides.forEach((slide, index) => {
						const isActive = index === currentIndex;
						slide.classList.toggle('is-active', isActive);
						slide.setAttribute('aria-hidden', isActive ? 'false' : 'true');
					});
					dots.forEach((dot, index) => {
						const isActive = index === currentIndex;
						dot.classList.toggle('is-active', isActive);
						dot.setAttribute('aria-selected', isActive ? 'true' : 'false');
					});
				};

				prev?.addEventListener('click', () => {
					currentIndex = (currentIndex - 1 + slides.length) % slides.length;
					render();
				});

				next?.addEventListener('click', () => {
					currentIndex = (currentIndex + 1) % slides.length;
					render();
				});

				dots.forEach((dot, index) => {
					dot.addEventListener('click', () => {
						currentIndex = index;
						render();
					});
				});

					render();
				});

				const lightbox = document.querySelector('[data-image-lightbox]');
				const lightboxImage = document.querySelector('[data-lightbox-image]');
				const lightboxCaption = document.querySelector('[data-lightbox-caption]');
				const lightboxClose = document.querySelector('[data-lightbox-close]');
				const galleryImages = Array.from(document.querySelectorAll('.gallery-image'));

				const openLightbox = (src, alt) => {
					if (!lightbox || !lightboxImage || !lightboxCaption) {
						return;
					}
					lightboxImage.setAttribute('src', src);
					lightboxImage.setAttribute('alt', alt || 'Expanded project image');
					lightboxCaption.textContent = alt || '';
					lightbox.classList.add('is-open');
					lightbox.setAttribute('aria-hidden', 'false');
					document.body.classList.add('lightbox-open');
				};

				const closeLightbox = () => {
					if (!lightbox || !lightboxImage || !lightboxCaption) {
						return;
					}
					lightbox.classList.remove('is-open');
					lightbox.setAttribute('aria-hidden', 'true');
					lightboxImage.setAttribute('src', '');
					lightboxImage.setAttribute('alt', '');
					lightboxCaption.textContent = '';
					document.body.classList.remove('lightbox-open');
				};

				galleryImages.forEach((image) => {
					image.addEventListener('click', () => {
						const src = image.getAttribute('src') || '';
						const alt = image.getAttribute('alt') || '';
						openLightbox(src, alt);
					});
				});

				lightboxClose?.addEventListener('click', closeLightbox);
				lightbox?.addEventListener('click', (event) => {
					if (event.target === lightbox) {
						closeLightbox();
					}
				});

				document.addEventListener('keydown', (event) => {
					if (event.key === 'Escape') {
						closeLightbox();
					}
				});

				const skillsRoot = document.querySelector('[data-skills-chart]');
				const skillsDataNode = document.getElementById('skills-area-data');

				if (skillsRoot && skillsDataNode) {
					let parsedSkillAreas = [];
					try {
						parsedSkillAreas = JSON.parse(skillsDataNode.textContent || '[]');
					} catch {
						parsedSkillAreas = [];
					}

					if (Array.isArray(parsedSkillAreas) && parsedSkillAreas.length > 0) {
						const normalizedAreas = parsedSkillAreas
							.filter((area) => area && typeof area.key === 'string' && Array.isArray(area.skills))
							.map((area) => {
								const normalizedCount = Number(area.count);
								return {
									...area,
									count: Number.isFinite(normalizedCount) ? normalizedCount : area.skills.length,
								};
							});

						const areaByKey = new Map(normalizedAreas.map((area) => [area.key, area]));
						const legendButtons = Array.from(skillsRoot.querySelectorAll('.legend-button'));
						const titleTarget = skillsRoot.querySelector('[data-skill-active-title]');
						const descriptionTarget = skillsRoot.querySelector('[data-skill-active-description]');
						const listTarget = skillsRoot.querySelector('[data-skill-active-list]');
						const sunburst = skillsRoot.querySelector('[data-skills-sunburst]');
						const svgNs = 'http://www.w3.org/2000/svg';
						const chartCenter = 130;
						const outerInnerRadius = 72;
						const outerOuterRadius = 122;
						const innerInnerRadius = 18;
						const innerOuterRadius = 66;
						const totalSkillCount = normalizedAreas.reduce(
							(sum, area) => sum + Math.max(1, Number(area.count) || area.skills.length),
							0,
						);

						const clamp = (value, min, max) => Math.min(max, Math.max(min, value));

						const polarToCartesian = (cx, cy, radius, angleInDegrees) => {
							const angleInRadians = ((angleInDegrees - 90) * Math.PI) / 180;
							return {
								x: cx + radius * Math.cos(angleInRadians),
								y: cy + radius * Math.sin(angleInRadians),
							};
						};

						const getRingSectorPath = (cx, cy, innerRadius, outerRadius, startAngle, endAngle) => {
							const outerStart = polarToCartesian(cx, cy, outerRadius, startAngle);
							const outerEnd = polarToCartesian(cx, cy, outerRadius, endAngle);
							const innerEnd = polarToCartesian(cx, cy, innerRadius, endAngle);
							const innerStart = polarToCartesian(cx, cy, innerRadius, startAngle);
							const largeArcFlag = endAngle - startAngle > 180 ? 1 : 0;

							return `M ${outerStart.x.toFixed(3)} ${outerStart.y.toFixed(3)} A ${outerRadius} ${outerRadius} 0 ${largeArcFlag} 1 ${outerEnd.x.toFixed(3)} ${outerEnd.y.toFixed(3)} L ${innerEnd.x.toFixed(3)} ${innerEnd.y.toFixed(3)} A ${innerRadius} ${innerRadius} 0 ${largeArcFlag} 0 ${innerStart.x.toFixed(3)} ${innerStart.y.toFixed(3)} Z`;
						};

						const getShortSkillLabel = (skill) => {
							if (skill.length <= 13) {
								return skill;
							}
							const words = skill.split(' ').filter(Boolean);
							if (words.length === 2 && words[0].length <= 8 && words[1].length <= 8) {
								return `${words[0]} ${words[1]}`;
							}
							return `${skill.slice(0, 11)}‚Ä¶`;
						};

						const buildAreaLayout = (selectedKey) => {
							const selectedArea = areaByKey.get(selectedKey) || normalizedAreas[0];
							if (!selectedArea) {
								return [];
							}

							const selectedCount = Math.max(1, Number(selectedArea.count) || selectedArea.skills.length);
							const selectedBaseSweep = totalSkillCount > 0 ? (selectedCount / totalSkillCount) * 360 : 0;
							const selectedSweep = clamp(selectedBaseSweep + 65, 142, 176);
							const remainingCount = Math.max(0, totalSkillCount - selectedCount);
							const remainingSweep = 360 - selectedSweep;

							let angle = -90;
							return normalizedAreas.map((area, index) => {
								const count = Math.max(1, Number(area.count) || area.skills.length);
								const isSelected = area.key === selectedArea.key;
								const sweep =
									isSelected || remainingCount === 0
										? selectedSweep
										: (count / remainingCount) * remainingSweep;
								const start = angle;
								const end = index === normalizedAreas.length - 1 ? 270 : angle + sweep;
								angle = end;

								return {
									...area,
									count,
									isSelected,
									startAngle: start,
									endAngle: end,
									sweep: end - start,
									midAngle: start + (end - start) / 2,
								};
							});
						};

						const drawSunburst = (layout, selectedKey) => {
							if (!(sunburst instanceof SVGSVGElement)) {
								return;
							}
							sunburst.innerHTML = '';

							const selectedArea = layout.find((area) => area.key === selectedKey);
							const selectedSkills = Array.isArray(selectedArea?.skills) ? selectedArea.skills : [];

							layout.forEach((area) => {
								const path = document.createElementNS(svgNs, 'path');
								path.setAttribute('class', `sunburst-parent${area.isSelected ? ' is-active' : ''}`);
								path.setAttribute(
									'd',
									getRingSectorPath(
										chartCenter,
										chartCenter,
										outerInnerRadius,
										outerOuterRadius,
										area.startAngle,
										area.endAngle,
									),
								);
								path.setAttribute('fill', area.color || '#62b8ff');
								path.setAttribute('data-skill-key', area.key);
								path.setAttribute('tabindex', '0');
								path.setAttribute('role', 'button');
								path.setAttribute('aria-pressed', area.isSelected ? 'true' : 'false');
								path.setAttribute('aria-label', `${area.label}: ${area.count} skills`);
								path.style.transformOrigin = `${chartCenter}px ${chartCenter}px`;

								if (area.isSelected) {
									const radians = ((area.midAngle - 90) * Math.PI) / 180;
									const offset = 5.5;
									const x = Math.cos(radians) * offset;
									const y = Math.sin(radians) * offset;
									path.style.transform = `translate(${x.toFixed(2)}px, ${y.toFixed(2)}px)`;
								}

								path.addEventListener('click', () => {
									renderArea(area.key);
									if (typeof path.blur === 'function') {
										path.blur();
									}
								});

								path.addEventListener('keydown', (event) => {
									if (event.key === 'Enter' || event.key === ' ') {
										event.preventDefault();
										renderArea(area.key);
									}
								});

								const tooltip = document.createElementNS(svgNs, 'title');
								tooltip.textContent = `${area.label}: ${area.count} skills`;
								path.append(tooltip);
								sunburst.append(path);

								if (area.sweep >= 18) {
									const labelPosition = polarToCartesian(
										chartCenter,
										chartCenter,
										(outerInnerRadius + outerOuterRadius) / 2 + (area.isSelected ? 3.5 : 0),
										area.midAngle,
									);
									const label = document.createElementNS(svgNs, 'text');
									label.setAttribute('class', 'sunburst-parent-label');
									label.setAttribute('x', labelPosition.x.toFixed(2));
									label.setAttribute('y', labelPosition.y.toFixed(2));
									label.setAttribute('text-anchor', 'middle');
									label.textContent = area.shortLabel || area.label;
									sunburst.append(label);
								}
							});

							if (selectedArea && selectedSkills.length > 0) {
								const skillSweep = selectedArea.sweep / selectedSkills.length;
								selectedSkills.forEach((skill, index) => {
									const skillStart = selectedArea.startAngle + skillSweep * index;
									const skillEnd = skillStart + skillSweep;
									const skillMid = skillStart + skillSweep / 2;

									const skillPath = document.createElementNS(svgNs, 'path');
									skillPath.setAttribute('class', 'sunburst-child');
									skillPath.setAttribute(
										'd',
										getRingSectorPath(
											chartCenter,
											chartCenter,
											innerInnerRadius,
											innerOuterRadius,
											skillStart,
											skillEnd,
										),
									);
									skillPath.setAttribute('fill', selectedArea.color || '#62b8ff');
									skillPath.setAttribute('fill-opacity', (0.56 + ((index % 4) * 0.09)).toFixed(2));

									const skillTooltip = document.createElementNS(svgNs, 'title');
									skillTooltip.textContent = skill;
									skillPath.append(skillTooltip);
									sunburst.append(skillPath);

									const skillLabelPoint = polarToCartesian(
										chartCenter,
										chartCenter,
										(innerInnerRadius + innerOuterRadius) / 2,
										skillMid,
									);
									const skillLabel = document.createElementNS(svgNs, 'text');
									skillLabel.setAttribute('class', 'sunburst-child-label');
									skillLabel.setAttribute('x', skillLabelPoint.x.toFixed(2));
									skillLabel.setAttribute('y', skillLabelPoint.y.toFixed(2));
									skillLabel.setAttribute('text-anchor', 'middle');
									skillLabel.textContent = getShortSkillLabel(skill);
									sunburst.append(skillLabel);
								});
							}

							const core = document.createElementNS(svgNs, 'circle');
							core.setAttribute('class', 'sunburst-core');
							core.setAttribute('cx', String(chartCenter));
							core.setAttribute('cy', String(chartCenter));
							core.setAttribute('r', String(innerInnerRadius - 2));
							sunburst.append(core);
						};

						const renderArea = (key) => {
							const area = areaByKey.get(key);
							if (!area || !titleTarget || !descriptionTarget || !listTarget) {
								return;
							}

							titleTarget.textContent = `${area.label} (${area.count})`;
							descriptionTarget.textContent = area.description;

							listTarget.innerHTML = '';
							area.skills.forEach((skill) => {
								const item = document.createElement('li');
								item.textContent = skill;
								listTarget.append(item);
							});

							const layout = buildAreaLayout(key);
							drawSunburst(layout, key);

							legendButtons.forEach((button) => {
								const isActive = button.getAttribute('data-skill-key') === key;
								button.classList.toggle('is-active', isActive);
								button.setAttribute('aria-pressed', isActive ? 'true' : 'false');
							});
						};

						legendButtons.forEach((button) => {
							const key = button.getAttribute('data-skill-key');
							button.addEventListener('click', () => {
								if (key) {
									renderArea(key);
								}
								if (typeof button.blur === 'function') {
									button.blur();
								}
							});
						});

						const firstKey = normalizedAreas[0]?.key;
						if (firstKey) {
							renderArea(firstKey);
						}
					}
				}

				applyFilter('all');
			})();
		</script>

